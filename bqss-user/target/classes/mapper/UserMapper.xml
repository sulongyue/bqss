<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bqss.repository.UserMapper">
    <insert id="addUser">
        insert into ums_user(mobile,password,real_name,id_card,email) values (#{mobile},#{password},#{realName},#{idCard},#{email})
    </insert>

    <select id="selectById" resultType="com.bqss.entity.ums.User">
        select * from ums_user where id = #{id}
    </select>

    <select id="selectByMobile" resultType="com.bqss.entity.ums.User">
        select * from ums_user where mobile = #{mobile}
    </select>

</mapper>